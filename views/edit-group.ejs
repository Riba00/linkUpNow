<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= pageName %>
    </h1>

    <form method="post" class="default-form">
        <div class="campo">
            <label>Name</label>
            <input type="text" value="<%= group.name %>" name="name" placeholder="Group Name">
        </div>

        <div class="campo">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= group.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label>Category</label>
            <select name="categoryId">
                <option value="" selected disabled>-- Select a category --</option>
                <% categories.forEach(category=> { %>
                    <option value="<%= category.id %>" <%= (group.categoryId === category.id) ? 'selected' : ''  %>>
                        <%= category.name %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <div class="campo">
            <label>Website</label>
            <input type="url" name="url" value="<%= group.url %>" placeholder="Website">
        </div>

        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Save">
        </div>
    </form>
</main>