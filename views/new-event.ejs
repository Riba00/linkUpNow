<main class="contenedor contenedor-formularios">
    <h1><%- pageName %></h1>
    <form class="default-form" action="/new-event" method="POST">
        <legend>About the Event</legend>
        <div class="campo">
            <label>Group</label>
            
            <select name="groupId">
                <option value="" disabled selected>-- Select Group --</option>
                <% if(groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                    <% }) %>

                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Title</label>
            <input type="text" name="title" placeholder="Event Title">
        </div>
        <div class="campo">
            <label>Guest</label>
            <input type="text" name="guest" placeholder="Guest or Speaker Name (if applicable)">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Date</label>
                <input type="date" name="date" placeholder="Event Date">
            </div>
            <div class="campo">
                <label>Hour</label>
                <input type="time" name="hour" placeholder="Event Hour">
            </div>
        </div>
        <div class="campo">
            <label>Capacity</label>
            <input type="number" min="1" name="capacity" placeholder="Event Capacity (if applicable)">
        </div>
        <div class="campo descripcion">
            <label>Description</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Event Location</legend>
        <div class="campo buscador">
            <label>Enter the Event Address</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Location">
                <small>The assistant will suggest an estimated address</small>
            </div>
        </div>

        <div class="campo mapa">
            <div id="mapa"></div>
            <p class="information">
                Move the Pin to the exact point if necessary
            </p>
        </div>

        <p class="informacion">Confirm that the following fields are correct:</p>
        <div class="campo">
            <label>Address</label>
            <input type="text" id="address" name="address" placeholder="Address">
        </div>
        <div class="campo">
            <label>City</label>
            <input type="text" id="city" name="city" placeholder="City">
        </div>
        <div class="campo">
            <label>State</label>
            <input type="text" id="state" name="state" placeholder="State">
        </div>
        <div class="campo">
            <label>Country</label>
            <input type="text" id="country" name="country" placeholder="Country">
        </div>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Create Event">
        </div>
    </form>
</main>
